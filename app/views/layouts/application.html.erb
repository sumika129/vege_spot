<!DOCTYPE html>
<html>
  <head>
    <title>VegeSpot</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light ">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><%= link_to image_tag('vegelogo.jpg'), root_path %></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

          <% if admin_signed_in? %>
            <li class="nav-item">
              <%= link_to "カテゴリ", admin_categories_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "地域", admin_areas_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ユーザー一覧", admin_users_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "コメント管理", admin_comments_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>
          <% elsif user_signed_in? %>
            <li class="nav-item">
              <%= link_to "マイページ", public_user_path(current_user), class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "投稿検索", public_posts_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", user_session_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "About", public_about_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "投稿検索", public_posts_path, class: 'nav-link text-dark' %>
            </li>
          <% end %>
          </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
