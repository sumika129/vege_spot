<!DOCTYPE html>
<html>
  <head>
    <title>VegeSpot</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg bg-light ">
        <div class="container">
          <%= link_to "VEGE SPOT", root_path, class:"navbar-brand" %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

          <% if admin_signed_in? %>
            <li>
              <%= link_to "カテゴリ", admin_categories_path %>
            </li>
            <li>
              <%= link_to "地域", admin_areas_path %>
            </li>
            <li>
              <%= link_to "ユーザー一覧", admin_users_path %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
            </li>
          <% elsif user_signed_in? %>
            <li>
              <%= link_to "マイページ", public_user_path(current_user) %>
            </li>
            <li>
              <%= link_to "新規投稿", new_public_post_path %>
            </li>
            <li>
              <%= link_to "投稿検索", public_posts_path %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            </li>
          <% else %>
            <li>
              <%= link_to "新規登録", new_user_registration_path %>
            </li>
            <li>
              <%= link_to "ログイン", user_session_path %>
            </li>
            <li>
              <%= link_to "About", public_about_path %>
            </li>
            <li>
              <%= link_to "投稿検索", public_posts_path %>
            </li>
          <% end %>
          </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
