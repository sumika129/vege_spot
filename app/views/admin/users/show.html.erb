<div class="container mt-5">
  <div class="row">
    <div class="col-md-5">

<h2><%= @user.name %>さんのユーザー情報</h2><br>

<table class="table mx-auto">
  <tr>
    <th>ユーザー名</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <% if @user.is_deleted %>
    <td>退会</td>
    <% else %>
    <td>有効</td>
    <% end %>
  </tr>
  <tr>
    <td><%= link_to "編集する", edit_admin_user_path(@user), class:"btn btn-sm btn-success" %></td>
  </tr>
</table>
    </div>

    <div class="col-md-5 offset-md-1">
<h2><%= @user.name %>さんの投稿</h2><br>
<table class="table mx-auto">
  <thead>
    <tr>
      <th>投稿日</th>
      <th>店名</th>
    </tr>
  </thead>
  <% @post.each do |post| %>
  <tbody>
    <tr>
      <%#= link_to post.created_at.strftime('%Y/%m/%d'), public_post_path(post) %>
      <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= post.shop %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<%= paginate @post %>

    </div>
  </div>
</div>
