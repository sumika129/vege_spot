<h2><%= @user.name %>さんのユーザー情報編集</h2>

<%= form_with model: [:admin,@user] do |f| %>
<table>
  <tr>
    <th>ユーザー名</th>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <td><%= f.radio_button :is_deleted, :true %>　<%= f.label :is_deleted, "退会" %>
        <%= f.radio_button :is_deleted, :false %>　<%= f.label :is_deleted, "有効" %></td>
  </tr>
  <td><%= f.submit '変更を保存', class:"btn btn-success" %></td>
</table>
<% end %>
