<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>コメント管理</h2><br>
<table>
  <thead>
    <tr>
      <th>ユーザーID</th>
      <th>ユーザー名</th>
      <th>コメント</th>
      <th></th>
    </tr>
  </thead>
  <% @comment.each do |comment| %>
  <tbody>
    <tr>
      <td><%= comment.user.id %></td>
      <td><%= comment.user.name %></td>
      <td><%= comment.comment %></td>
      <td><%= link_to "削除", admin_comment_path(comment), method: :delete, class:"btn btn-sm btn-danger", "data-confirm" => "本当に消しますか?" %></td>
    </tr>
  </tbody>
  <% end %>
</table>
<%= paginate @comment %>

    </div>
  </div>
</div>