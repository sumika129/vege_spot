<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-5">

<h2>カテゴリ新規登録</h2><br>
<%= form_with model: [:admin,@category] do |f| %>
  <h4>カテゴリ名</h4>
  <%= f.text_field :name %>
  <%= f.submit '新規登録', class:"btn btn-success" %>
<% end %>
    </div>

    <div class="col-md-5 offset-md-1">
<h2>カテゴリ一覧</h2><br>
<table>
  <thead>
    <th>カテゴリ名</th>
    <th></th>
  </thead>
  <% @categories.each do |category| %>
  <tbody>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to "編集", edit_admin_category_path(category), class:"btn btn-sm btn-success" %></td>
    </tr>
  </tbody>
  <% end %>
</table>

    </div>
  </div>
</div>
