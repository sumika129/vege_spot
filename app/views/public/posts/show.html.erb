<h1>投稿詳細</h1>
  <table>
    <tr>
      <th>店名</th>
      <td><%= @post.shop %></td>
    </tr>
    <tr>
      <th>地域</th>
      <td><%= @area.name %></td>
    </tr>
    <tr>
      <th>カテゴリ</th>
      <td><%= @category.name %></td>
    </tr>
    <tr>
      <th>買った商品</th>
      <td><%= @post.item %></td>
    </tr>
  </table><br>
  <%= @post.impression %>

  <div>
    <p>コメント一覧</p>
    <% @post.comments.each do |comment| %>
      <%= comment.user.name %>
      <%= comment.created_at.strftime('%Y/%m/%d') %>
      <%= comment.comment %>
    <% end %>
  </div>
  <div>
    <%= form_with model: [@post, @comment] do |f| %>
      <%= f.text_area :comment %>
      <%= f.submit "コメントする" %>
    <% end %>
  </div>

<br>
<%= link_to "投稿一覧に戻る", public_posts_path %>