<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<br>
<h2>投稿編集</h2>
<br>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: [:public,@post] do |f| %>
  <table>
    <tr>
      <th>写真</th>
      <td><%= f.file_field :image %></td>
    </tr>
    <tr>
      <th>店名</th>
      <td><%= f.text_field :shop %></td>
    </tr>
    <tr>
      <th>地域選択</th>
      <td><%= f.collection_select :area_id,Area.all, :id, :name , {prompt: "地域を選択"}%></td>
    </tr>
    <tr>
      <th>カテゴリ選択</th>
      <td><%= f.collection_select :category_id,Category.all, :id, :name , {prompt: "カテゴリを選択"}%></td>
    </tr>
    <tr>
      <th>買った商品</th>
      <td><%= f.text_field :item %></td>
    </tr>
    <tr>
      <th>感想コメント</th>
      <td><%= f.text_area :impression %></td>
    </tr>
  </table>
  <%= f.submit '変更を保存', class:"btn btn-success" %><br/>
<% end %>

    </div>
  </div>
</div>