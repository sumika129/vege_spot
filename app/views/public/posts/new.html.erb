<h1>新規投稿</h1>
<%= form_with model: [:public,@post] do |f| %>
  <table>
    <tr>
      <th>写真</th>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <th>店名</th>
      <td><%= f.text_field :shop %></td>
    </tr>
    <tr>
      <th>地域選択</th>
      <td><%= f.collection_select :area_id,Area.all, :id, :name , {prompt: "地域を選択"} %></td>
    </tr>
    <tr>
      <th>カテゴリ選択</th>
      <td><%= f.collection_select :category_id,Category.all, :id, :name , {prompt: "カテゴリを選択"} %></td>
    </tr>
    <tr>
      <th>買った商品</th>
      <td><%= f.text_field :item %></td>
    </tr>
    <tr>
      <th>感想コメント</th>
      <td><%= f.text_area :impression %></td>
    </tr>
  </table>
  <%= f.submit '投稿する', class:"btn btn-success" %>
<% end %>
