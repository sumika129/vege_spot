<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>登録情報の編集</h2>
<br>
<%= form_with model: [:public,@user] do |f| %>
  <table>
    <tr>
      <th>ユーザー名（ニックネーム）</th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email %></td>
    </tr>
    <td><%= f.submit "変更を保存する", class:"btn btn-success" %></td>
    <td><%= link_to "退会する", public_unsubscribe_path, class:"btn btn-sm btn-danger" %></td>
  </table>
<% end %>

    </div>
  </div>
</div>
