<div class="container mt-5">
  <div class="row">
    <div class="col-md-5">

<h2>マイページ</h2>
<br>
<h3>登録情報</h3>
<br>
  <table>
    <tbody>
      <tr>
        <th>ユーザー名</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
    </tbody>
    <td><%= link_to "登録情報の編集", edit_public_user_path(@user), class:"btn btn-sm btn-success" %></td>
  </table>
<br>
  <%= link_to "新規に投稿する", new_public_post_path, class:"btn btn-sm btn-primary" %>
    </div>

    <div class="col-md-6 offset-md-1">
  <br>
  <br>
  <h4><%= @user.name %>さんの投稿一覧</h4>
  <table class="table mx-auto">
    <% @post.each do |post| %>
      <tr>
        <td></td>
        <td><%= link_to post.created_at.strftime('%Y/%m/%d'), public_post_path(post) %></td>
        <td><%= post.shop %></td>
        <td><%= link_to "編集する", edit_public_post_path(post), class:"btn btn-sm btn-success" %></td>
      </tr>
    <% end %>
  </table>
  <%= paginate @post %>
<br>
  <p><%= link_to"いいねした投稿を見る", likes_public_user_path(@user) %></p>

    </div>
  </div>
</div>


