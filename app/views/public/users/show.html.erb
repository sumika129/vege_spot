<h1>マイページ</h1>

<h2>登録情報</h2>
  <table>
    <tbody>
      <tr>
        <th>ユーザー名</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
    </tbody>
    <td><%= link_to "登録情報の編集", edit_public_user_path(@user), class:"btn btn-sm btn-success" %></td>
  </table>

  <%= link_to "新規投稿", new_public_post_path, class:"btn btn-sm btn-primary" %>
  <table>
    <h4><%= @user.name %>さんの投稿一覧</h4>
    <% @post.each do |post| %>
      <tr>
        <td></td>
        <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= post.shop %></td>
        <td><%= link_to "編集する", edit_public_post_path(post), class:"btn btn-sm btn-success" %></td>
      </tr>
    <% end %>
  </table>

  <p><%= link_to"いいねした投稿を見る", likes_public_user_path(@user) %></p>


